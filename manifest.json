{
  "name": "ChromeColors",
  "manifest_version": 2,
  "description": "",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_popup": "html/index.html",
    "default_title": "Chrome Colors"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["js/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ]
}